{
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.scss", "**/*.css"],
      "options": { "singleQuote": false }
    }
  ],
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "trailingComma": "all",
  "printWidth": 80,
  "tabWidth": 2,
  "arrowParens": "always",
  "endOfLine": "lf",
  "singleAttributePerLine": true
}
